# =============================================================================
# RATE LIMITING & ANTI-CHEAT CONFIGURATION
# =============================================================================

# General API Rate Limiting
RATE_LIMIT_GENERAL_WINDOW_MS=900000    # 15 minutes (15 * 60 * 1000)
RATE_LIMIT_GENERAL_MAX=100             # Max requests per window per IP

# Score Submission Rate Limiting (per IP)
RATE_LIMIT_SCORE_WINDOW_MS=60000       # 1 minute (60 * 1000)
RATE_LIMIT_SCORE_MAX=10                # Max score submissions per window per IP

# Score Validation Limits
MAX_SCORE_LIMIT=1000000                # Maximum allowed score value
MAX_TRANSACTIONS_LIMIT=10000           # Maximum allowed transactions count
MAX_REASONABLE_SCORE=10000             # Scores above this are rejected as invalid
SUSPICIOUS_SCORE_THRESHOLD=100000      # Log warning for scores above this threshold

# Per-Wallet Rate Limiting
WALLET_SUBMISSIONS_PER_HOUR=20         # Max submissions per wallet per hour
WALLET_RATE_RESET_MS=3600000           # Rate limit reset window (1 hour = 60 * 60 * 1000)

# Session Management
MAX_SESSION_AGE_MS=1800000             # Max game session duration (30 minutes = 30 * 60 * 1000)
SESSION_CLEANUP_AGE_MS=3600000         # Clean up sessions older than this (1 hour = 60 * 60 * 1000)
